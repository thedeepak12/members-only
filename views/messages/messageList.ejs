 <div class="max-w-2xl mx-auto px-4 pt-6">
   <h1 class="text-center text-3xl font-bold text-white mb-12">Messages</h1>
   <% if (!isMember) { %>
     <div class="flex justify-end mb-6">
       <a href="/membership" class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold px-3 py-2 rounded transition-colors">
         <span>Join the club</span>
       </a>
     </div>
   <% } %>
   <div id="messages" class="space-y-4 pb-40">
     <% messages.forEach((message) => { %>
       <div class="bg-gray-800 p-4 rounded shadow-2xl">
         <div class="flex items-center justify-between text-xs text-gray-400">
           <span class="text-gray-100 font-semibold text-base sm:text-lg"><%= message.name %></span>
           <span><%= new Date(message.created_at).toISOString().replace('T',' ').slice(0,16) %> UTC</span>
         </div>
         <p class="text-gray-200 mt-2"><%= message.content %></p>
       </div>
     <% }); %>
   </div>
 </div>
 <div id="bottom-anchor"></div>
 <div id="composer" class="fixed bottom-0 left-0 right-0 bg-gray-900" style="padding-bottom: env(safe-area-inset-bottom);">
   <div class="max-w-2xl mx-auto px-4 py-3">
     <form action="/messages" method="POST" class="">
       <div class="relative">
         <textarea id="content" name="content" required placeholder="Message..." class="w-full pr-14 p-3 border rounded bg-gray-900 text-gray-100 min-h-20 resize-none"></textarea>
         
         <button type="submit" aria-label="Send" class="absolute bottom-2.5 right-2.5 bg-blue-600 hover:bg-blue-700 text-white rounded p-2 shadow-sm mb-2 lg:mb-1 lg:mr-1 cursor-pointer">
           <img src="/icons/send.svg" alt="" class="w-5 h-5 cursor-pointer" />
         </button>
       </div>
     </form>
   </div>
 </div>
